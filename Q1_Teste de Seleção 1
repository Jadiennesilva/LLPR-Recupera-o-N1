#include <stdio.h>
 
int main() {
    
    int A, B, C, D;
    
    printf("Digite o valor A: \n");
    scanf("%d",&A);
    printf("Digite o valor B: \n");
    scanf("%d",&B);
    printf("Digite o valor C: \n");
    scanf("%d",&C);
    printf("Digite o valor D: \n");
    scanf("%d",&D);
   
    
    if(B>C && D>A && C+D > A+B && C>=0 && D >=0 && A%2==0)
    
    {
    printf("Valores aceitos\n");   
    
  }else{
  	
    printf("Valores nao aceitos\n");
}
    
    return 0;
}
